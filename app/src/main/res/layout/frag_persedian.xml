<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_topbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/search1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gopher_bold"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_alignParentStart="true"
                android:textSize="23sp"
                android:id="@+id/tt"
                android:layout_marginStart="20dp"
                android:text="@string/persediaan"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_new_doc"
                app:layout_constraintTop_toTopOf="@id/tt"
                app:layout_constraintBottom_toBottomOf="@id/tt"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_add_top"
                android:contentDescription="@string/perkara" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_topbar">

        <RelativeLayout
            android:paddingBottom="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginBottom="6dp"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap item to update stock"
                android:fontFamily="@font/gopher_medium"
                android:textColor="@color/colorPrimary"
                android:layout_marginHorizontal="18dp"
                android:id="@+id/desc"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="true"
                android:paddingHorizontal="10dp"
                android:layout_height="match_parent"
                android:layout_below="@id/desc"
                android:id="@+id/list_persediaan"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginTop="12dp"
                android:id="@+id/shimer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/model_loading"/>
                    <include layout="@layout/model_loading"/>
                    <include layout="@layout/model_loading"/>
                    <include layout="@layout/model_loading"/>
                    <include layout="@layout/model_loading"/>

                </LinearLayout>


            </com.facebook.shimmer.ShimmerFrameLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
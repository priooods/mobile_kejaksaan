<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/grey</item>
        <item name="fontFamily">@font/gopher_light</item>
        <item name="boxStrokeWidth">0.8dp</item>
    </style>

    <style name="TextInputLayoutStyleDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/grey</item>
        <item name="fontFamily">@font/gopher_light</item>
        <item name="boxStrokeWidth">0.8dp</item>
    </style>

    <style name="DialogFullscreen" parent="Theme.AppCompat.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="tabmenuprofile" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/tabs_selected</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="tabmenudefault" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/grey</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="stylesText" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
    </style>

</resources>